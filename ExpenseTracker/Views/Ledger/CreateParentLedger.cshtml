@model TestApplication.ViewModels.ParentledgerVm

@{
    ViewData["Title"] = "Create Parent Ledger";
}

<form asp-action="CreateParentLedger" method="post" class="container mt-4" style="max-width:500px;margin:auto;">
    <div class="card">
        <div class="card-header">
            <h6>Add Parent Ledger</h6>
        </div>
        <div class="card-body">

            <!-- Parent Ledger -->
            <div class="mb-3">
                <label class="form-label">Select Parent Ledger</label>
                <select id="ParentLedger" asp-for="ParentId" class="form-select" required>
                    <option value="">-- Select Parent Ledger --</option>
                    <option value="1">Asset</option>
                    <option value="2">Liability</option>
                    <option value="3">Income</option>
                    <option value="4">Expenses</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Parent Ledger Code</label>
                <input asp-for="ParentCode" class="form-control" required placeholder=""/>
            </div>

            <div class="mb-3">
                <label class="form-label">Parent Ledger Name</label>
                <input asp-for="ParentLedgerName" class="form-control" required placeholder=""/>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
            <button type="" class="btn btn-danger" formmethod="get" asp-action="CreateParentLedger">Discard</button>

        </div>
    </div>
</form>