@model ExpenseTracker.ViewModels.BankTransactionVm;


@{
    ViewData["Title"] = "Bank Transaction";
}

<form asp-action="BankDepositandWithdraw" method="post" class="container mt-4" style="max-width:500px;margin:auto;">

    <div class="card">
        <div class="card-header">
            <h6>Bank Account Information</h6>
        </div>
        <div class="card-body">

            <div class="mb-3">
                <label asp-for="BankId">Bank Name<span class="text-danger">*</span></label>
                <select asp-for="BankId" id="BankName" class="form-control" required="required">
                    <option value="">Select a Bank</option>
                    @if (Model.BankList != null)
                    {
                        foreach (var b in Model.BankList)
                        {
                            <option value="@b.Value">@b.Text</option>
                        }
                    }
                </select>
                <span asp-validation-for="BankId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TxnDate">Date <span class="text-danger">*</span></label>
                <input asp-for="TxnDate"
                       class="form-control"
                       type="text"
                       id="engdate"
                       hidden="hidden"
                       data-date-mask
                       maxlength="10"/><input
                    class="form-control"
                    type="text"
                    id="date"
                    maxlength="10"/>
                <span asp-validation-for="TxnDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Type">Transaction Type <span class="text-danger">*</span></label>
                <select asp-for="Type" class="form-control" required="required">
                    <option value="">Select Transaction Type</option>
                    <option value="Deposit">Deposit</option>
                    <option value="Withdraw">Withdraw</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Amount">Amount <span class="text-danger">*</span></label>
                <input asp-for="Amount" class="form-control" type="number" step="0.01" placeholder=""
                       required="required"/>
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Remarks"></label>
                <textarea asp-for="Remarks" class="form-control" placeholder="Enter remarks"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Record Transaction</button>
        </div>
    </div>
</form>



