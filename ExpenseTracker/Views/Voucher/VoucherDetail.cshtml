@model IEnumerable<dynamic>;

@{
    ViewData["Title"] = "Voucher Report";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.4.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
@if (Model != null && Model.Any())
{
    <div class="container mt-4">
        <h4 class="text-center mb-3">Voucher Details</h4>
        <div class="d-flex justify-content-between mb-3">
            <div>
                <div><strong>Voucher No :</strong> @Model.FirstOrDefault()?.voucherno</div>
            </div>
            <div class="text-end">
                <div><strong>Txn Date :</strong> @Model.FirstOrDefault()?.txndate.ToString("yyyy-MM-dd")</div>
            </div>
        </div>


        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-light">
                <tr>
                    <th>Sn</th>
                    <th>Code</th>
                    <th>Ledger</th>
                    <th class="text-end">Total DR</th>
                    <th class="text-end">Total CR</th>
                </tr>
                </thead>
                <tbody>

                @{
                    int sn = 1;

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@sn</td>
                            <td>@item.code</td>
                            <td>
                                @item.ledgername
                            </td>
                            <td class="text-end">@item.dramount.ToString("N2")</td>
                            <td class="text-end">@item.cramount.ToString("N2")</td>
                        </tr>
                        sn++;
                    }
                }
                </tbody>
                <tfoot>
                <tr>
                    @{
                        decimal totalCrAmount = 0;
                        if (Model != null)
                        {
                            totalCrAmount = Model.Sum(item => (decimal)(item.cramount ?? 0));
                        }

                        decimal totalDrAmount = 0;
                        if (Model != null)
                        {
                            totalDrAmount = Model.Sum(item => (decimal)(item.dramount ?? 0));
                        }
                    }
                    <th colspan="3" class="text-end">Total</th>
                    <th class="text-end">@totalDrAmount.ToString("N2")</th>
                    <th class="text-end">@totalCrAmount.ToString("N2")</th>
                </tr>
                </tfoot>
            </table>
        </div>
        <div class="mt-2">
            <strong>Narration:</strong>
            @if (Model != null)
            {
                @Model.FirstOrDefault()?.remarks
            }

            <div class="text-start">
                
                        <div>
                            <a class="btn btn-danger"
                               asp-action="ReverseVoucher"
                               asp-route-transactionid="@Model.FirstOrDefault().id"
                               asp-route-type="@Model.FirstOrDefault()?.type"
                               asp-route-typeid="@Model.FirstOrDefault()?.typeid"
                               >Reverse</a></div>

            </div>
        </div>

    </div>
}
else
{
    <tr>
        <td colspan="5">No records found.</td>
    </tr>
}
