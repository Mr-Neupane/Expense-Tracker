@model System.Collections.Generic.IEnumerable<dynamic>

@{
    ViewData["Title"] = "Bank Transaction Report";
}

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
    <tr>
        <th>SN</th>
        <th>Bank Name</th>
        <th>Transaction Date</th>
        <th>Amount</th>
        <th>Type</th>
        <th>Rec By</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @{
        int sn = 1;
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>@sn</td>
            <td>@item.bankname</td>
            <td>@item.txndate</td>
            <td>@item.amount</td>
            <td>@item.type</td>
            <td>@item.username</td>
            <th><a asp-action="ReverseBankTransaction" asp-route-id="@item.id" asp-route-type="@item.type"
                   asp-route-bankid="@item.bankid" asp-route-amount="@item.amount" class="btn btn-danger">Reverse</a></th>
        </tr>
        sn++;
    }
    </tbody>
</table>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["AlertMessage"]
    </div>
}
