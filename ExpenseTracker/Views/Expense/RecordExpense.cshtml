@model TestApplication.ViewModels.ExpenseVm;

@{
    ViewData["Title"] = "Record Expense";
}

<form asp-action="RecordExpense" method="post" id="expenseForm" class="container mt-4"
      style="max-width:500px;margin:auto;">

    <div class="card">
        <div class="card-header">
            <h6>Add Expense</h6>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="TxnDate">Date <span class="text-danger">*</span></label>
                <input asp-for="TxnDate" class="form-control" id="engdate" hidden="hidden" type="text"
                       autocomplete="off"/>
                <input class="form-control" id="date" type="text" autocomplete="off"/>
                <span asp-validation-for="TxnDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Expense Ledger <span class="text-danger">*</span></label>
                <select id="ExpenseLedger" asp-for="ExpenseLedger" class="form-select" required="required">
                    <option value="">-- Select Expense Ledger --</option>
                    @if (Model.ExpenseLedgers != null)
                    {
                        foreach (var e in Model.ExpenseLedgers)
                        {
                            <option value="@e.Value">@e.Text</option>
                        }
                    }
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Amount" class="form-label">Amount <span class="text-danger">*</span></label>
                <input type="number" name="Amount" class="form-control" required/>
            </div>
            <div class="mb-3">
                <label class="form-label">Expense From Ledger <span class="text-danger">*</span></label>
                <select id="ExpenseFromLedger" asp-for="ExpenseFromLedger" class="form-select" required="required">
                    <option value="">-- Select Cash/Bank Ledger --</option>
                    @if (Model.CashAndBankLedgers != null)
                    {
                        foreach (var l in Model.CashAndBankLedgers)
                        {
                            <option value="@l.Value">@l.Text</option>
                        }
                    }
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="Remarks" class="form-label">Remarks <span class="text-danger">*</span> </label>
                <input type="text" name="Remarks" class="form-control" required/>
            </div>


            <button type="submit" class="btn btn-primary"  onclick="return confirm('Are you sure you want save!')">Record</button>
            <button type="" formmethod="get" asp-action="RecordExpense" class="btn btn-danger">Discard</button>
        </div>
    </div>
</form>